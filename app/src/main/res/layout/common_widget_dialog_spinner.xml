<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_blue"/>
    <LinearLayout
        android:background="@color/common_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/common_cancel_btn"
            android:padding="7dp"
            android:clickable="true"
            android:src="@drawable/com_ic_new_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/common_title_text"
            android:text="@string/common_please_choose"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/common_ok_btn"
            android:padding="7dp"
            android:clickable="true"
            android:src="@drawable/com_ic_new_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/common_line"/>
    <antistatic.spinnerwheel.WheelVerticalView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:visibleItems="5"
        app:selectionDivider="@color/common_line"
        app:selectionDividerHeight="0.5dp"
        app:selectionDividerActiveAlpha="100"
        app:selectionDividerDimmedAlpha="255"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/common_vertical_wheel"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>